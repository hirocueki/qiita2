.row
  %aside.col-md-4
    %section.user_info
      %h1
        = @user.name
    %section.stats
      = render 'shared/stats'
  .col-md-8
    = render 'follow_form' if user_signed_in?
      - if @user.items.any?
        %h3= "投稿一覧 ( #{@user.microposts.count })"
      %ol.items
      = render template: 'items/index'
      = paginate @items

