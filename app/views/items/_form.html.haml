= form_with(model: [@user, @item], local: true) do |form|
  - if @item.errors.any?
    #error_explanation
      %h2 = #{ pluralize(@item.errors.count, "error") } prohibited this item from being saved:

      %ul
      - @item.errors.full_messages.each do |message|
        %li = message

  .field
    = form.text_field :title, id: :item_title, :placeholder => "タイトル"
  .field
    = form.text_area :body, id: :item_body, :placeholder => "本文"
  .actions
    = form.submit yield :submit_label